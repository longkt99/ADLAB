# ============================================
# Content Machine - Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local or any file containing real secrets.
# ============================================

# ============================================
# Supabase Configuration
# ============================================
# Option A: Local Supabase (requires Docker Desktop)
# NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
# NEXT_PUBLIC_SUPABASE_ANON_KEY=<local-anon-key-from-supabase-start>
# SUPABASE_SERVICE_ROLE_KEY=<local-service-role-key-from-supabase-start>

# Option B: Supabase Cloud
NEXT_PUBLIC_SUPABASE_URL=https://<PROJECT_REF>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=<your-cloud-anon-key>
SUPABASE_SERVICE_ROLE_KEY=<your-cloud-service-role-key>

# Required when using Supabase Cloud in development (explicit opt-in)
# This bypasses the safety guard that prevents accidental remote usage
SUPABASE_ALLOW_REMOTE_IN_DEV=true

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=<your-openai-api-key>

# ============================================
# Application Settings
# ============================================
CRON_SECRET=<random-secret-for-cron-jobs>
NEXT_PUBLIC_USE_REAL_AI=true
